{% extends 'base.html.twig' %} {% block title %} CookEat - Mes ingredients {%
 endblock %} {% block body %}
<div class="container mt-4">
  {% if not ingredients.items is same as ([]) %}
  <h1>Mes ingrédients</h1>

  <a href="{{ path('ingredient.new') }}" class="btn btn-success">
    Créer un ingrédient
  </a>

     {# read and display just one flash message type #}
{% for message in app.flashes('success') %}
<div class=" alert alert-success mt-4">
    {{ message }}
</div>
{% endfor %}

  <div class="count mt-4">
    il y a 
     {{ ingredients.getTotalItemCount}}
    ingrédients au total.
</div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Numéro</th>
        <th scope="col">Nom</th>
        <th scope="col">Quantity</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
        {% for ingredient in ingredients %}
        <tr class="table-success">
            <th scope="row">{{ ingredient.id}}</th>
            <td>{{ ingredient.name}}</td>
            <td>{{ ingredient.quantity}} g</td>
            <td><a class="btn btn-success" href="{{path('ingredient.edit', { 'id': ingredient.id })}}">Modifier</a></td>
            <td><a class="btn btn-warning" href="{{path('ingredient.delete', { 'id': ingredient.id })}}">Supprimer</a></td>

          </tr>
        {% endfor %}
    </tbody>
  </table>
  <div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(ingredients) }}
</div>
{% else %}
<h4>Il n'y a pas d'ingrédients</h4>
{% endif %}
</div>
{% endblock %}
